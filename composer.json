{
    "name": "adam-paterson/watson-tone-analyzer",
    "description": "IBM Watson Tone Analyzer",
    "type": "library",
    "keywords": [
        "IBM",
        "Watson",
        "Machine Learning",
        "SDK",
        "tone analysis"
    ],
    "require": {
        "php": "~5.6|~7.0",
        "adam-paterson/ibm-watson-common": "1.0-dev",
        "roave/security-advisories": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0||~5.0||~6.0",
        "mockery/mockery": "^0.9",
        "squizlabs/php_codesniffer": "^3.0",
        "guzzlehttp/psr7": "^1.4",
        "php-http/guzzle6-adapter": "1.1.*"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Adam Paterson",
            "email": "hello@adampaterson.co.uk",
            "homepage": "https://github.com/adam-paterson/watson-tone-analyzer",
            "role": "Developer"
        },
        {
            "name": "All Contributors",
            "homepage": "https://github.com/adam-paterson/watson-tone-analyzer/contributors"
        }
    ],
    "autoload": {
        "psr-4": {
            "IBM\\Watson\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IBM\\Watson\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
